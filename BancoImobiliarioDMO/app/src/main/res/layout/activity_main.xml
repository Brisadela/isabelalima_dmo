<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_conteudoInicial"
        android:layout_margin="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_messageInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Digite Quantos jogadores?"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/text_qtdJogadores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="#191970"
            android:textSize="24sp" />

    <Button
        android:id="@+id/button_iniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:textColor="#000"
        android:backgroundTint="#D3D3D3"
        android:text="INICIAR" />

    </LinearLayout>

    <TextView
        android:id="@+id/view_saidaInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:textColor="#EF6C00"
        android:textSize="12sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/l2_conteudoPos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="64dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/text_valor"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:inputType="numberDecimal"
            android:textColor="#191970"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_m"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:backgroundTint="#D3D3D3"
            android:padding="8dp"
            android:text="M"
            android:textColor="#000" />

        <Button
            android:id="@+id/button_k"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:backgroundTint="#D3D3D3"
            android:padding="8dp"
            android:text="K"
            android:textColor="#000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l3_conteudoDentro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_message1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Digite seu num. e num do outo Jogador para transações?"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/text_JogadorInicial"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="2"
            android:inputType="numberDecimal"
            android:textColor="#191970"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/text_JogadorOutro"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="2"
            android:inputType="numberDecimal"
            android:textColor="#191970"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/button_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:backgroundTint="#D3D3D3"
            android:text="OK"
            android:textColor="#000" />

    </LinearLayout>




</LinearLayout>